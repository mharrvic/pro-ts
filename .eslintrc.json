{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "project": "tsconfig.eslint.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": { 
        "prefer-const": "error",
        "no-unused-vars": "off",
        "no-unused-params": "off"
    },
    "overrides": [{
        "files": ["tests/**/*.ts"],
        "env": {"jest": true, "node": true}
    }]
}
